<% if @wiki.errors.any? %>

      <div class="alert alert-danger">

        <h4><%= pluralize(@wiki.errors.count, "error") %>.</h4>
        <ul>
          <% @wiki.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
      </div>

<% end %>


<h1>New Wiki</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Wikis:</p>
    <ul>
      <li>Make sure the wiki is appropriate.</li>
      <li>Never insult doggies.</li>
      <li>Smile and enjoy when you type.</li>
    </ul>
  </div>

  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki name" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>

      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %> Private topic
          <% end %>
        </div>
        <%= f.submit "Save", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>

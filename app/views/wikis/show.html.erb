<h1><%= @wiki.title %></h1>

<%#<% if user_is_authorized_to_edit_topics? %>
  <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
<%# end %>

<%# if user_is_authorized_to_delete_topics? %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
<%# end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead">
      <%= @wiki.body %>
    </p>
    <br>
  </div>

  <div class="col-md-4">
    <%= form_for @wiki do |f| %>
      <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private, disabled: true %> Private topic
      <% end %>
    <% end %>
  </div>

</div>
